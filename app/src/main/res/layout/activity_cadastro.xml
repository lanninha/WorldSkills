<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/roxoEscuro"
        tools:context=".Cadastro">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/worldskills"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:text="Cadastro"
            android:textColor="@color/branco"
            android:textSize="56dp" />

        <EditText
            android:id="@+id/caixinhaEmailCadastro"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/quadrado"
            android:hint="Insira o email"
            android:textColorHint="@color/branco"
            android:textColor="@color/branco"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/nomeUsuario"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/quadrado"
            android:ems="10"
            android:paddingLeft="20dp"
            android:hint="Insira o nome de Usuário"
            android:textColor="@color/branco"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="335dp"
            android:textColorHint="@color/branco"
            android:inputType="text"/>

        <EditText
            android:id="@+id/caixinhaSenhaCadastro"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/quadrado"
            android:hint="Insira sua senha"
            android:textColorHint="@color/branco"
            android:textColor="@color/branco"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="405dp"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/senha1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/olho_open"
            android:layout_marginLeft="277dp"
            android:layout_marginTop="412dp"/>

        <EditText
            android:id="@+id/conferirSenhaCadastro"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/quadrado"
            android:hint="Confirme a senha"
            android:textColorHint="@color/branco"
            android:textColor="@color/branco"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="475dp"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/senha2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/olho_open"
            android:layout_marginLeft="277dp"
            android:layout_marginTop="480dp"/>

        <TextView
            android:id="@+id/aceitar"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="Ao se registrar, você concorda com nossos "
            android:textColor="@color/branco"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="540dp"/>

        <TextView
            android:id="@+id/termos"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Termos de uso"
            android:textColor="@color/branco"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="560dp"/>


        <TextView
            android:id="@+id/nossa"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="e as nossas"
            android:textColor="@color/azul"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="560dp"/>


        <TextView
            android:id="@+id/politica"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="Políticas de privacidade"
            android:textColor="@color/branco"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="560dp"/>

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:backgroundTint="@color/roxoMedio"
        android:text="Cadastrar" />

    <TextView
            android:id="@+id/ou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ou continue com:"
            android:textColor="@color/branco"
            android:textSize="18dp"
            android:textStyle="bold"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="640dp"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="674dp"
            android:layout_marginLeft="160dp"
            android:src="@drawable/google"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="674dp"
            android:layout_marginLeft="214dp"
            android:src="@drawable/twitter"/>

    </RelativeLayout>
