<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxoEscuro"
    tools:context=".Login">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/worldskills"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:text="Login"
        android:textColor="@color/branco"
        android:textSize="56dp" />

    <EditText
        android:id="@+id/caixinhaUser"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/quadrado"
        android:hint="Insira o UsuÃ¡rio"
        android:textColorHint="@color/branco"
        android:textColor="@color/branco"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/caixinhaSenha"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/quadrado"
        android:textColor="@color/branco"
        android:hint="Insira sua senha"
        android:textColorHint="@color/branco"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:textStyle="bold"
        android:backgroundTint="@color/roxoMedio"
        android:text="Entrar" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Esqueceu a senha?"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Cadastre -se aqui"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:backgroundTint="@color/roxoMedio"
        android:layout_centerHorizontal="true"
        android:id="@+id/botaoCadastro"
        android:layout_marginTop="520dp"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/google"/>

    <ImageView
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="595dp"
        android:src="@drawable/twitter" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="587dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/yt"/>

    <ImageView
        android:id="@+id/olhoAberto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:src="@drawable/olho_open"
        android:layout_marginTop="340dp"/>
</RelativeLayout>